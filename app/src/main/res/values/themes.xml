<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Карточка сообщения -->
        <item name="cardBackgroundColor">@color/surface</item>
        
        <!-- Применяем стиль для диалогов -->
        <item name="materialAlertDialogTheme">@style/Alan.Dialog</item>
        <item name="alertDialogTheme">@style/Alan.Dialog</item>
        
        <!-- Применяем стили кнопок -->
        <item name="buttonBarButtonStyle">@style/Alan.Button.Common</item>
        <item name="materialButtonStyle">@style/Alan.Button.Common</item>
        <item name="android:buttonStyle">@style/Alan.Button.Common</item>
        <item name="android:buttonBarButtonStyle">@style/Alan.Button.Common</item>
    </style>
    
    <!-- Алан Стиль для диалогов -->
    <style name="Alan.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alan.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alan.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alan.Button</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Alan.Button</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Alan.Button</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/Alan.Button</item>
        <item name="materialButtonStyle">@style/Alan.Button.Common</item>
        <item name="buttonStyle">@style/Alan.Button.Common</item>
    </style>
    
    <!-- Стиль для кнопок в диалогах -->
    <style name="Alan.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>
    
    <!-- Стиль для обычных кнопок -->
    <style name="Alan.Button.Common" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>
    
    <!-- Стиль для текстовых кнопок -->
    <style name="Alan.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>
</resources>