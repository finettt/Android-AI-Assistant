<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для кнопок с белой окантовкой в темной теме -->
    <style name="WhiteBorderedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="rippleColor">@color/white</item>
    </style>
    
    <!-- Стиль для обведенных кнопок с белой окантовкой в темной теме -->
    <style name="WhiteBorderedOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/white</item>
    </style>
    
    <!-- Стиль для текстовых кнопок с белой окантовкой в темной теме -->
    <style name="WhiteBorderedTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
    </style>
    
    <!-- Стиль для полей ввода в темной теме -->
    <style name="Alan.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="endIconTint">@color/white</item>
        <item name="startIconTint">@color/white</item>
    </style>
    
    <!-- Стиль для обведенных полей ввода в темной теме -->
    <style name="Alan.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="endIconTint">@color/white</item>
        <item name="startIconTint">@color/white</item>
    </style>
    
    <!-- Стиль для обычных EditText в темной теме -->
    <style name="Alan.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>
</resources> 