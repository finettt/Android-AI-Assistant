<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Внешнее свечение -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="36dp"
                android:startColor="#50427AF4"
                android:endColor="#00427AF4" />
            <size android:width="80dp" android:height="80dp" />
        </shape>
    </item>
    
    <!-- Среднее свечение -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="32dp"
                android:startColor="#80427AF4"
                android:endColor="#30427AF4" />
        </shape>
    </item>
    
    <!-- Внутреннее свечение -->
    <item android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="24dp"
                android:startColor="#B0427AF4"
                android:endColor="#60427AF4" />
        </shape>
    </item>

    <!-- Основная кнопка -->
    <item android:left="20dp" android:top="20dp" android:right="20dp" android:bottom="20dp">
        <shape android:shape="oval">
            <solid android:color="?attr/colorPrimary" />
        </shape>
    </item>
</layer-list> 