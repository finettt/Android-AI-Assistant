<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    
    <!-- Улучшенный градиентный фон -->
    <gradient
        android:type="sweep"
        android:gradientRadius="120dp"
        android:startColor="#7F3DFF"
        android:centerColor="#0196FF"
        android:endColor="#FF3DEB"
        android:centerX="0.5"
        android:centerY="0.5" />
    
    <!-- Размеры круга -->
    <size
        android:width="70dp"
        android:height="70dp" />
        
    <!-- Добавляем тень для объемности -->
    <padding 
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp" />
</shape> 